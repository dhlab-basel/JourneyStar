### Shape for calendar ###
################################
js-shacl:calendarPropertyShape
    	a sh:NodeShape ;
    	sh:targetObjectsOf js:calendar ;
    	sh:or ( [sh:in (dbr:Julian_calendar dbr:Gregorian_calendar dbr:Islamic_calendar)]
              [sh:datatype xsd:anyURI]
              [sh:nodeKind sh:IRI ]) .

